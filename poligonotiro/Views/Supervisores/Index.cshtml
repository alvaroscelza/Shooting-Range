@model List<poligonotiro.Models.ViewModels.ListaSupervisores>

@{
    ViewBag.Title = "Supervisores";
}
    <body style="background: url(/Content/images/pol1.jpg); background-size: cover; background-position: center;">
        <h2>@ViewBag.Title</h2>

        <div class="row" style="text-align:right;padding:5px;">
            <a href="#" data-toggle="modal" data-target="#agregarsupervisor" class="btn btn-primary">Nuevo</a>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped" width="100%" border="3" cellspacing="10" cellpadding="10" style="background: white;">
                    <tr>
                        <th width="30%">Id Supervisor</th>
                        <th width="50%">Nombre Supervisor</th>
                        <th width="20%" style="text-align: center;">Acciones</th>
                    </tr>
                    @foreach (var oElemento in Model)
                    {
                        <tr>
                            <td width="30%">@oElemento.Idsupervisor </td>
                            <td width="50%">@oElemento.nombre</td>
                            <td width="20%" align="center">
                                <a href="" data-toggle="modal" data-target="#editarsupervisor" class="btn btn-warning" onclick="actualizasupervisor('@oElemento.Idsupervisor','@oElemento.nombre')">Editar</a>
                                <a href="" data-toggle="modal" data-target="#eliminarsupervisor" class="btn btn-danger" onclick="eliminasupervisor('@oElemento.Idsupervisor')">Eliminar</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>

        </div>

        <script type="text/javascript">
            function actualizasupervisor(id, nombre) {
                $('#idsupervisoract').val(id);
                $('#nombresupervisor').val(nombre);
            };

            function eliminasupervisor(id) {
                $('#idsupervisor').val(id);
            }
        </script>


        <div class="modal fade" id="agregarsupervisor" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Agregar Supervisor</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        @using (Html.BeginForm("Nuevo", "Supervisores", FormMethod.Post))
                        {

                            <div class="row">
                                <center>
                                    <div class="col col-md-12">
                                        <label for="my-input">Nombre Supervisor:</label>
                                        <input type="text" name="nombre" class="form-control" placeholder="Nombre del Supervisor" required="">
                                    </div>
                                </center>
                            </div>

                            <br />

                            <div class="row" style="text-align: center;">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>

                        }

                    </div>

                    <div class="modal-footer">

                    </div>

                </div>
            </div>
        </div>


        <div class="modal fade" id="editarsupervisor" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Editar Supervisor</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        @using (Html.BeginForm("Editar", "Supervisores", FormMethod.Post))
                        {

                            <div class="row">
                                <center>
                                    <input type="hidden" name="Idsupervisor" id="idsupervisoract" class="form-control" placeholder="ID" required="" readonly="">

                                    <div class="col col-md-12">
                                        <label for="my-input">Nombre:</label>
                                        <input type="text" name="nombre" id="nombresupervisor" class="form-control" placeholder="Nombre de usuario" required="">
                                    </div>
                                </center>
                            </div>

                            <br />

                            <div class="row" style="text-align: center;">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>

                        }

                    </div>

                    <div class="modal-footer">

                    </div>

                </div>
            </div>
        </div>


        <div class="modal fade" id="eliminarsupervisor" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Eliminar Supervisor</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        @using (Html.BeginForm("Eliminar", "Supervisores", FormMethod.Get))
                        {

                            <div class="row">
                                <center>
                                    <input type="hidden" name="idsupervisor" id="idsupervisor" class="form-control" placeholder="ID" required="" readonly="">

                                    <h2>¿Está Seguro de eliminar el supervisor?</h2>
                                </center>
                            </div>

                            <br />

                            <div class="row" style="text-align: center;">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                <input type="submit" value="Aceptar" class="btn btn-primary" />
                            </div>

                        }

                    </div>

                    <div class="modal-footer">

                    </div>

                </div>
            </div>
        </div>
    </body>